<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        android:defaultValue="@string/default_server_ip"
        android:dialogTitle="Server listening IP"
        android:key="ip_key"
        android:title="@string/ip"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:defaultValue="@string/default_port"
        android:dialogTitle="Server listening port"
        android:key="port_key"
        android:title="@string/port"
        app:useSimpleSummaryProvider="true" />

</androidx.preference.PreferenceScreen>